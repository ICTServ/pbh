{
  "name": "@pockethost/app",
  "version": "0.4.1",
  "private": true,
  "scripts": {
    "dev": "vite dev --force",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "start": "HOST=localhost PORT=5173 node dist-server/index.js",
    "pm2": "pm2 del www ; pm2 start \"yarn start\" --name=www -o ~/logs/www.log -e ~/logs/www.log",
    "watch": "chokidar 'src/**' -c 'yarn build' --initial"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^1.0.0-next.99",
    "@sveltejs/kit": "next",
    "chokidar-cli": "^3.0.0",
    "node-html-parser": "^6.1.4",
    "svelte": "^3.44.0",
    "svelte-check": "^2.7.1",
    "svelte-preprocess": "^4.10.6",
    "tslib": "^2.3.1",
    "typescript": "^4.8.0",
    "vite": "^3.1.0"
  },
  "type": "module",
  "dependencies": {
    "@dansvel/vite-plugin-markdown": "2.0.5",
    "@microsoft/fetch-event-source": "2.0.1",
    "@pockethost/common": "0.0.1",
    "@s-libs/micro-dash": "16.1.0",
    "@types/bootstrap": "5.2.6",
    "@types/d3-scale": "4.0.4",
    "@types/d3-scale-chromatic": "3.0.0",
    "@types/js-cookie": "3.0.3",
    "@types/marked": "5.0.1",
    "boolean": "3.2.0",
    "d3-scale": "4.0.2",
    "d3-scale-chromatic": "3.0.0",
    "date-fns": "2.30.0",
    "highlight.js": "11.8.0",
    "js-cookie": "3.0.5",
    "marked": "7.0.5",
    "pocketbase": "0.17.3",
    "pretty-bytes": "6.1.1",
    "random-word-slugs": "0.1.7",
    "sass": "1.66.1",
    "svelte-highlight": "7.3.0",
    "type-fest": "4.3.1",
    "url-pattern": "1.0.3",
    "vite-plugin-markdown": "2.1.0"
  }
}